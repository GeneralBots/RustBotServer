{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GB API Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gb-api"
                ],
                "filter": {
                    "name": "gb-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "DATABASE_URL": "postgres://gbuser:gbpassword@localhost:5432/generalbots",
                "REDIS_URL": "redis://localhost:6379"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gb-api'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=gb-api"
                ],
                "filter": {
                    "name": "gb-api",
                    "kind": "bin"
                }
            },
            "args": [
                "--test-threads=1"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Integration Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=gb-api"
                ],
                "filter": {
                    "name": "integration",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ],
    "compounds": [
        {
            "name": "API Server + Debug",
            "configurations": [
                "Debug GB API Server"
            ]
        }
    ]
}